@{
}

@model IEnumerable<string>

<div class="d-grid gap-2">

    <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="" asp-route-pageNum="1"
       class="btn btn-secondary btn-block">Home</a>

    <div class="btn-group-vertical">

    @foreach (string c in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="@c" asp-route-pageNum="1"
           class="btn @(ViewBag.SelectedType == c ? "btn-primary" : "btn-outline-secondary") btn-block">@c</a>
    }
    </div>

</div>